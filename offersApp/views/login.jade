extends layout

block content
  h4.form-signin-heading Please sign in..
  div
    if (message.length > 0)
      .label.label-danger
        label Invalid User Name / Password. Please try again.
      br
      br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      button.btn.btn-success(type='submit') Submit
      &nbsp;
      a.btn.btn-primary(href="/register") Sign up